#include <iostream>
#include <string>
#include <map>

std::map<char, int>string_to_map(const std::string &str)
{
    std::map<char, int> myMap;
    for(int i = 0; i < str.length(); i++)
    {
        myMap.insert(std::pair<char, int>(str[i], (int)str[i]));
    }
    return myMap;
}

int main() {
    std::map<char, int> word_1;
    std::map<char, int> word_2;

    std::string f_word;
    std::string s_word;

    std::cout << "Enter the first and second word to check for anagram:" << std::endl;
    std::cin >> f_word >> s_word;

    word_1 = string_to_map(f_word);
    word_2 = string_to_map(s_word);

    if(word_1 == word_2)
    {
        std::cout << "It's anagram!" << std::endl;
    }
    else
    {
        std::cout << "No anagram." << std::endl;
    }

    return 0;
}
