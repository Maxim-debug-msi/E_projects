#include <iostream>
#include <string>
#include <map>

bool anagram(std::map<std::string, std::string>::iterator it)
{
    if(it->first.length() == it->second.length())
    {
        int sum_1 = 0;
        int sum_2 = 0;
        for(int i = 0; i < it->first.length(); i++)
        {
            sum_1 += (int)it->first[i];
            sum_2 += (int)it->second[i];
        }
        if(sum_1 == sum_2)
        {
            return true;
        }
    }
    return false;
}

int main() {
    std::map<std::string, std::string> words;
    std::string f_word;
    std::string s_word;

    std::cout << "Enter the first and second word to check for anagram:" << std::endl;
    std::cin >> f_word >> s_word;

    words.insert(std::pair<std::string, std::string>(f_word, s_word));
    std::map<std::string, std::string>::iterator  it = words.begin();

    if(anagram(it))
    {
        std::cout << "It's anagram!" << std::endl;
    }
    else
    {
        std::cout << "No anagram." << std::endl;
    }

    return 0;
}
