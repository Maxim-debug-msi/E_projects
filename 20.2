#include <iostream>
#include <fstream>
#include <ctime>
#include <cstdlib>

int main() {
    int height, width;
    srand(time(nullptr));
    std::cout << "Specify the length and width of the painting:" << std::endl;
    std::cin >> height >> width;
    std::ofstream pic("C:\\E_files\\pic.txt");
    for(int i = 0; i < abs(height * width); i++)
    {
        pic << rand() % 2;
        if((i + 1) % width == 0) pic << std::endl;
    }
    pic.close();
    return 0;
}
