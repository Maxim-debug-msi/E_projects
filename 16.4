#include <iostream>
#include <sstream>
#include <string>

enum PIANO_KEYS
{
    DO = 1 << 0,
    RE = 1 << 1,
    MI = 1 << 2,
    FA = 1 << 3,
    SOL = 1 << 4,
    LA = 1 << 5,
    SI = 1 << 6
};

bool correct_enter(const std::string str)
{
    for(int i = 0; i < str.length(); i++)
    {
        if(str[i] < '0' || str[i] > '7') return false;
    }
    return true;
}

void output(char note)
{
    int note_num = (int)(note - '0') - 1;
   if(1 << note_num & DO) std::cout<<"DO ";
   else if(1 << note_num & RE) std::cout<<"RE ";
   else if(1 << note_num & MI) std::cout<<"MI ";
   else if(1 << note_num & FA) std::cout<<"FA ";
   else if(1 << note_num & SOL) std::cout<<"SOL ";
   else if(1 << note_num & LA) std::cout<<"LA ";
   else if(1 << note_num & SI) std::cout<<"SI ";
}

int main() {
    std::stringstream combination;
    std::string note;
    bool correct;
    std::cout<<"Enter the 12-st note combination. Use digits 1 to 7 for this."<<std::endl;
    for(int i = 0; i < 12; i++)
    {
        std::cout<<"Enter the "<<i + 1<<"-st note combination(1 to 7): ";
        do {
            std::cin >> note;
            correct = correct_enter(note);
            if(!correct) std::cout<<"Incorrect enter! Try again."<<std::endl;
        }while(!correct);
        combination << note;
    }
    for(int i = 0; i < combination.str().length(); i++)
    {
        output(combination.str()[i]);
    }
    combination.clear();
    return 0;
}
