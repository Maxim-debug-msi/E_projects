#include <iostream>
#include <vector>

void swap_vec(std::vector <int>& vec, int *arr)
{
    for(int i = 0; i < vec.size(); i++)
    {
        int tmp = arr[i];
        arr[i] = vec[i];
        vec[i] = tmp;
    }
}

int main() {
    std::vector<int> a = {1, 2, 3, 4};
    int b[] {4, 3, 2, 1};
    swap_vec(a, b);
    std::cout<<"Vector a: ";
    for(int i = 0; i < a.size(); i++)
    {
        std::cout<<a[i]<<" ";
    }
    std::cout<<std::endl;
    std::cout<<"Array b: ";
    for(int i = 0; i < a.size(); i++)
    {
        std::cout<<b[i]<<" ";
    }
    std::cout<<std::endl;
    return 0;
}
