#include <iostream>

int ways(int n, int k = 3)
{
    if(n == 0) return 1;
    int score = 0;
    for(int i = 1; i <= std::min(n, k); i++)
    {
        score += ways(n - i);
    }
    return score;
}

int main() {
    int n, k;
    std::cout<<"Which step should the rabbit jump?"<<std::endl;
    std::cin>>n;
    std::cout<<"Steps on the stayer?"<<std::endl;
    std::cin>>k;
    std::cout<<ways(n, k)<<std::endl;

    return 0;
}
