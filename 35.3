#include <iostream>
#include <filesystem>
#include <vector>

int main() {
    std::filesystem::path path{"C:\\Projects"};
    const std::string ext{".uproject"};

    auto findFileNameByExt = [](std::filesystem::path& path, const std::string& ext){
        std::vector<std::string> fileNames{};

        for(auto& p : std::filesystem::recursive_directory_iterator(path)){
            if(is_regular_file(p.path()) && p.path().extension() == ext){
                fileNames.push_back(p.path().filename().string());
            }
        }
        return fileNames;
    };

    std::vector<std::string> fileNames = findFileNameByExt(path, ext);

    for(auto& i : fileNames){
        std::cout << i << std::endl;
    }
    return 0;
}
