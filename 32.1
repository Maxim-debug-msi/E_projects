#include <iostream>
#include <fstream>
#include "nlohmann/json.hpp"

int main() {
    std::ofstream file("record.json");
    nlohmann::json dict{};
    dict["Movie"] = "South Park";
    dict["Country"] = "USA";
    dict["Date of creation"] = 1997;
    dict["Studio"] = "Comedy Central";
    dict["Written by"] = "Matt Stone, Tray Parker";
    dict["Director"] = "Matt Stone, Tray Parker, Eric Stoch";
    dict["Main characters"] = "Eric Cartman, Kyle Broflovski, Kenny McCormick and Stan Marsh";
    dict["Actors"] = "Trey Parker, Matt Stone, Mona Marshall, April Stewart";
    file << dict;
    file.close();
    return 0;
}

